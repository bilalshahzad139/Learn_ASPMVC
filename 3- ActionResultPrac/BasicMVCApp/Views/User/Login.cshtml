@{
    Layout = "~/Views/Shared/_Layout.cshtml";   
 }

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<form action="/User/LoginVerify1" method="post">
    <div>
        Login:
        <input type="text" name="login" />
        <br />
        Password:
        <input type="password" name="password" />
        <br />
        <input type="submit" value="Login" /> <a href="User/NewUser">New User?</a>
        <br />
        <span style="color:red">@ViewBag.ErrMsg</span>
    </div>
</form>
